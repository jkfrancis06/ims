{% block content %}




    <!-- Central Modal Small -->
    <div class="modal fade" id="fileModal" tabindex="-1" role="dialog" aria-labelledby="fileModal"
         aria-hidden="true"  data-backdrop="static" data-keyboard="false">

        <!-- Change class .modal-sm to change the size of the modal -->
        <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">


            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body d-flex justify-content-center">

                    <div class="img-loader progress md-progress primary-color-dark">
                        <div class="indeterminate"></div>
                    </div>
                    <div id="img-container"></div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>





    <div class="col col-12 mt-5">



        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="reception-tab" data-toggle="tab" href="#reception" role="tab" aria-controls="reception"
                   aria-selected="true">Boîte de réception</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="envoi-tab" data-toggle="tab" href="#envoi" role="tab" aria-controls="envoi"
                   aria-selected="false">Boîte d'envoi</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <!-- Tab boite de reception -->

            <div class="tab-pane fade show active" id="reception" role="tabpanel" aria-labelledby="reception-tab">

                <table id="recep"  class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Reference</th>
                        <th scope="col">Date</th>
                        <th scope="col">Origine</th>
                        <th scope="col">Type</th>
                        <th scope="col">Sujet</th>
                        <th scope="col">Contenu</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for courrier in reception %}
                        <tr>
                            <td>{{ courrier.referenceInterne }}</td>
                            <td>{{ courrier.datecourrier|date('d-m-Y') }}</td>
                            <td>{{ courrier.sender ? courrier.sender.name : '' }}</td>
                            <td>
                                {% if constant('COURRIER_OFF', courrier) == courrier.type %}
                                    Courrier Officiel
                                {% endif %}

                                {% if constant('COURRIER_NOTE', courrier) == courrier.type %}
                                    Note de renseignement
                                {% endif %}

                                {% if constant('COURRIER_FORUM', courrier) == courrier.type %}
                                    Forum
                                {% endif %}
                            </td>
                            <td>{{ courrier.sujet }}</td>
                            <td>{{ courrier.commentaire|raw }}</td>
                            <td>
                                {% for pieces in courrier.piecejointe %}
                                    <!-- Button trigger modal -->
                                    <a data-value-id="{{ pieces.id }}" class="btn btn-outline-blue-grey btn-sm fileModalLauncher" data-toggle="modal" data-target="#fileModal" >
                                        Voir
                                    </a>
                                {% endfor %}
                            </td>

                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>

            <!-- Tab boite d'envoi -->
            <div class="tab-pane fade" id="envoi" role="tabpanel" aria-labelledby="envoi-tab">

                <table id="env"  class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Reference</th>
                        <th scope="col">Date</th>
                        <th scope="col">Destination</th>
                        <th scope="col">Type</th>
                        <th scope="col">Sujet</th>
                        <th scope="col">Contenu</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for courrier in envoi %}
                        <tr>
                            <td>{{ courrier.referenceInterne }}</td>
                            <td>{{ courrier.datecourrier|date('d-m-Y') }}</td>
                            <td>{{ courrier.receiver ? courrier.receiver.name : '' }}</td>
                            <td>
                                {% if constant('COURRIER_OFF', courrier) == courrier.type %}
                                    Courrier Officiel
                                {% endif %}

                                {% if constant('COURRIER_NOTE', courrier) == courrier.type %}
                                    Note de renseignement
                                {% endif %}

                                {% if constant('COURRIER_FORUM', courrier) == courrier.type %}
                                    Forum
                                {% endif %}
                            </td>
                            <td>{{ courrier.sujet }}</td>
                            <td>{{ courrier.commentaire|raw }}</td>
                            <td>
                                {% for pieces in courrier.piecejointe %}
                                    <!-- Button trigger modal -->
                                    <a data-value-id="{{ pieces.id }}" class="btn btn-outline-blue-grey btn-sm fileModalLauncher" data-toggle="modal" data-target="#fileModal" >
                                        Voir
                                    </a>
                                {% endfor %}
                            </td>

                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>


    </div>





{% endblock %}


