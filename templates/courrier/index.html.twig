                            <td>
                                {% if constant('COURRIER_OFF', courrier) == courrier.type %}
                                    <span>Courrier Officiel</span>
                                {% endif %}

                                {% if constant('COURRIER_NOTE', courrier) == courrier.type %}
                                    <span>Note de renseignement</span>
                                {% endif %}

                                {% if constant('COURRIER_FORUM', courrier) == courrier.type %}
                                    <span>Forum</span>
                                {% endif %}
                            </td>
                            <td>{{ courrier.sujet }}</td>
                            <td >{{ courrier.commentaire|raw }}</td>
                            <td class="font-weight-bold">
                                {{ courrier.piecejointe ? courrier.piecejointe|length : 0 }} <i class="fa fa-paperclip"></i>
                            </td>
                            <td>

                                <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">
                                    Actions
                                </button>

                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('view_courrier',{courrier:courrier.id}) }}">Voir</a>
                                    <a class="dropdown-item" href="{{ path('create-courrier',{responseTo:courrier.id}) }}">Répondre</a>
                                    <a class="dropdown-item" href="{{ path('edit_courrier',{courrier:courrier.id}) }}">Modifier</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item"
                                       href="{{ path('delete_courrier',{courrier:courrier.id}) }}"
                                       onclick="return confirm('Confirmez-vous la suppression?')"
                                    >Supprimer</a>
                                </div>
                                {# {% for pieces in courrier.piecejointe %}
                                    <!-- Button trigger modal -->
                                    <a data-value-id="{{ pieces.id }}" class="btn btn-outline-blue-grey btn-sm fileModalLauncher" data-toggle="modal" data-target="#fileModal" >
                                        Voir
                                    </a>
                                {% endfor %}  #}
                            </td>

                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>


    </div>





{% endblock %}


