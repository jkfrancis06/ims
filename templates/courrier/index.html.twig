{% block content %}




    <div class="col col-12 mt-5">



        {% for message in app.session.flashbag.get('delete_create') %}

            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>{{ message }}!</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        {% for message in app.session.flashbag.get('courrier_create') %}

            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>{{ message }}!</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}


        <ul class="nav nav-pills " id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="reception-tab" data-toggle="tab" href="#reception" role="tab" aria-controls="reception"
                   aria-selected="true">
                    <i class="fa fa-inbox mr-2"></i>Boîte de réception
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="envoi-tab" data-toggle="tab" href="#envoi" role="tab" aria-controls="envoi"
                   aria-selected="false">
                    <i class="fas fa-paper-plane mr-2"></i>Boîte d'envoi
                </a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <!-- Tab boite de reception -->

            <div class="tab-pane fade show active" id="reception" role="tabpanel" aria-labelledby="reception-tab">

                <table id="recep"  class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Reference</th>
                        <th style="width: 10%">Date</th>
                        <th style="width: 13%">Origine</th>
                        <th>Type</th>
                        <th style="width: 15%">Sujet</th>
                        <th>Contenu</th>
                        <th style="width: 5%"></th>
                        <th style="width: 8%"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for courrier in reception %}
                        <tr>
                            <td>{{ courrier.referenceInterne }}</td>
                            <td>{{ courrier.datecourrier|date('d-m-Y') }}</td>
                            <td>{{ courrier.sender ? courrier.sender.name : '' }}</td>
                            <td>
                                {% if constant('COURRIER_OFF', courrier) == courrier.type %}
                                    <span>Courrier Officiel</span>
                                {% endif %}

                                {% if constant('COURRIER_NOTE', courrier) == courrier.type %}
                                    <span>Note de renseignement</span>
                                {% endif %}

                                {% if constant('COURRIER_FORUM', courrier) == courrier.type %}
                                    <span>Forum</span>
                                {% endif %}
                            </td>
                            <td>{{ courrier.sujet }}</td>
                            <td >{{ courrier.commentaire|raw }}</td>
                            <td class="font-weight-bold">
                                {{ courrier.piecejointe ? courrier.piecejointe|length : 0 }} <i class="fa fa-paperclip"></i>
                            </td>
                            <td>

                                <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">
                                   Actions
                                </button>

                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('view_courrier',{courrier:courrier.id}) }}">Voir</a>
                                    <a class="dropdown-item" href="{{ path('create-courrier',{responseTo:courrier.id}) }}">Répondre</a>
                                    <a class="dropdown-item" href="{{ path('edit_courrier',{courrier:courrier.id}) }}">Modifier</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item"
                                       href="{{ path('delete_courrier',{courrier:courrier.id}) }}"
                                       onclick="return confirm('Confirmez-vous la suppression?')"
                                       >Supprimer</a>
                                </div>
                                {# {% for pieces in courrier.piecejointe %}
                                    <!-- Button trigger modal -->
                                    <a data-value-id="{{ pieces.id }}" class="btn btn-outline-blue-grey btn-sm fileModalLauncher" data-toggle="modal" data-target="#fileModal" >
                                        Voir
                                    </a>
                                {% endfor %}  #}
                            </td>

                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>

            <!-- Tab boite d'envoi -->
            <div class="tab-pane fade" id="envoi" role="tabpanel" aria-labelledby="envoi-tab">

                <table id="env"  class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Reference</th>
