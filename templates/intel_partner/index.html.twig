{% extends 'nav-courrier.html.twig' %}

{% block title %} Partenaires {% endblock %}

{% block content %}

    <h3>Liste des partenaires</h3>
    <hr>

    {% for message in app.session.flashbag.get('affaire_partner') %}

        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>{{ message }}!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    {% for message in app.session.flashbag.get('affaire_partner_edit') %}

        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>{{ message }}!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <a class="btn btn-primary" href="{{ path('intel_partner_new') }}">Nouveau</a>
    <table class="table table-striped table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Pays</th>
                <th>Date de crÃ©ation</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for intel_partner in intel_partners %}
            <tr>
                <td>{{ intel_partner.name }}</td>
                <td>{{ intel_partner.description | raw }}</td>
                <td>{{ intel_partner.country | country('fr') }}</td>
                <td>{{ intel_partner.createdAt ? intel_partner.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class=" btn btn-sm btn-secondary" href="{{ path('intel_partner_show', {'id': intel_partner.id}) }}">Voir</a>
                    <a class=" btn btn-sm btn-info" href="{{ path('intel_partner_edit', {'id': intel_partner.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
