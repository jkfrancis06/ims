                                   {% for entite in affaire.entites %}
                                       <tr>
                                           <td class="text-center">
                                               <img src="{{ asset('/upload/') }}{{ entite.mainPicture }}" alt="thumbnail" class="img-thumbnail"
                                                    style="width: 8em;height: 8em">
                                           </td>
                                           <td class="text-uppercase">{{ entite.description }}&nbsp;{{ entite.description2 }}</td>

                                           <td class="text-uppercase">
                                               {% if entite.aliases is defined   %}
                                                   {% for alias in entite.aliases %}
                                                       {{ alias.alias }}
                                                   {% endfor %}
                                               {% endif %}
                                           </td>

                                           <td class="text-reset  ">
                                               {{ entite.resume | raw }}
                                           </td>


                                           <td>
                                               {% if entite.role == constant('ROLE_SUSPECT', entite)  %}
                                                   <span class="font-weight-bold">SUSPECT</span>
                                               {% endif %}

                                               {% if entite.role == constant('ROLE_INTEREST', entite)  %}
                                                   <span class="font-weight-bold">PERSONNE D'INTERET</span>
                                               {% endif %}

                                               {% if entite.role == constant('ROLE_VICTIME', entite)  %}
                                                   <span class="font-weight-bold">VICTIME</span>
                                               {% endif %}

                                               {% if entite.role == constant('ROLE_SOURCE', entite)  %}
                                                   <span class="font-weight-bold">SOURCE</span>
                                               {% endif %}

                                           </td>

                                           <td>

                                               <div class="d-flex align-items-center">

                                                   {% if entite.isPersonne() is defined %}
                                                       {% set type = 1 %}
                                                   {% endif %}
                                                   {% if entite.isVehicule() is defined %}
                                                       {% set type = 2 %}
                                                   {% endif %}
                                                   {% if entite.isOrganisation() is defined %}
                                                       {% set type = 3 %}
                                                   {% endif %}

                                                   <a href="{{ path('affaire_details_entite', {id: affaire.id, entite_id: entite.id }) }}" class="btn-floating btn-sm btn-primary">
                                                       <i class="fa fa-eye"></i>
                                                   </a>
                                                   <a href="{{ path('update_entite', {id: affaire.id, type: type, entite_id: entite.id }) }}" class="btn-floating btn-sm btn-deep-purple">
                                                       <i class="fa fa-pen">
                                                       </i>
                                                   </a>
                                                   <a href="{{ path('delete_entite', {id: entite.id }) }}" class="btn-floating btn-sm btn-danger" onclick="return confirm('Voulez vous vraiment supprimer cette entite ?')">
                                                       <i  class="fa fa-trash" ></i>
                                                   </a>
                                               </div>
                                           </td>

                                       </tr>
                                   {% endfor %}

                                   </tbody>
                               </table>
                           </div>
                       </div>
                   </div>

                </div>
            </div>
            <!-- Tab Entites -->

            <!-- Tab Evenement -->
            <div class="tab-pane fade" id="envenement" role="tabpanel" aria-labelledby="envenement-tab">
                <div class="row" style="margin-top: 1em">



                    <div class="col col-12" style="margin-top: 1em">

                        <div class="card card-cascade">
                            <div class="view view-cascade gradient-card-header blue-gradient">

                                <h2 class="card-subtitle mb-3">Evenements</h2>

                            </div>
                            <!-- Card content -->
                            <div class="card-body card-body-cascade">

                                <div class="dropdown">

                                    <!--Trigger-->
                                    <a href="{{ path('envenement_create',{'id': affaire.id}) }}" class="btn btn-outline-primary" type="button">Ajouter un evenement</a>

                                </div>



                                <table id="dtMaterialDesignExample" class="table text-left table-bordered table-striped display" >
                                    <thead>
                                    <tr>
                                        <th class="th-sm">
                                            Type
                                        </th>
                                        <th class="th-sm">
                                            Titre
                                        </th>
                                        <th class="th-sm">
                                            Entites
                                        </th>
                                        <th class="th-sm">
                                            Dates
                                        </th>
                                        <th class="th-sm">
                                            Localisation
                                        </th>
                                        <th class="th-sm">
                                            Action
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for event in affaire.envenements %}
                                        <tr>
                                            <td class="text-center text-uppercase">
                                                {% if event.typeEvenement == constant('EVENT_PER', event)  %}
                                                    <span class="font-weight-bold">perquisition</span>
                                                {% endif %}

                                                {% if event.typeEvenement == constant('EVENT_AUD', event)  %}
                                                    <span class="font-weight-bold">audition</span>
                                                {% endif %}

                                                {% if event.typeEvenement == constant('EVENT_FIL', event)  %}
                                                    <span class="font-weight-bold">filature</span>
                                                {% endif %}

                                                {% if event.typeEvenement == constant('EVENT_OTHER', event)  %}
                                                    <span class="font-weight-bold">autre</span>
                                                {% endif %}

                                                {% if event.typeEvenement == constant('EVENT_INFIL', event)  %}
                                                    <span class="font-weight-bold">infiltration</span>
                                                {% endif %}
                                            </td>

                                            <td class="text-uppercase">
                                                {{ event.titre }}
                                            </td>

                                            <td>

                                                <ul class="list-group">
                                                    {% for entite in event.entite %}
                                                        <li class="list-group-item">
                                                            <a href="{{ path('affaire_details_entite', {id: affaire.id, entite_id: entite.id }) }}" style="text-decoration: none">
                                                                <span class="text-uppercase">{{ entite.description }}</span>&nbsp;<span class="text-uppercase">{{ entite.description2 }}</span>
                                                            </a>
                                                        </li>
                                                    {% endfor %}
                                                </ul>

                                            </td>

                                            <td >
                                                Du &nbsp; {{ event.startAt|date('d-m-Y H:i:s') }}
                                                {% if event.endAt is not null %}
                                                    au &nbsp; {{ event.endAt|date('d-m-Y H:i:s') }}
                                                {% endif %}
                                            </td>

                                            <td class="text-reset  ">
                                                {{ event.localisation }}
                                            </td>

                                            <td>
                                                <a  href="{{ path('affaire_details_event', {id: affaire.id, event_id: event.id }) }}" class="btn-floating btn-sm btn-primary">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <a href="{{ path('envenement_edit',{id: affaire.id , event_id: event.id }) }}" class="btn-floating btn-sm btn-deep-purple">
                                                    <i class="fa fa-pen">
                                                    </i>
                                                </a>
                                                <a href="{{ path('delete_event', {id: event.id }) }}" class="btn-floating btn-sm btn-danger" onclick="return confirm('Voulez vous vraiment supprimer cet evenement ?')">
                                                    <i  class="fa fa-trash" ></i>
                                                </a>
                                            </td>

                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>

                    </div>

                </div>
            </div>
            </div>
            <!-- Tab Evenement -->

            <!-- Tab Rapport -->
            <div class="tab-pane fade" id="report" role="tabpanel" aria-labelledby="report-tab">
                <div class="row" style="margin-top: 1em; margin-left: 2em">
                    <a download  href="{{ path('affaire_rapport',{id:affaire.id}) }}" type="button" class="btn btn-outline-primary waves-effect">
                        <i style="color: inherit" class="fa fa-cloud-download-alt"></i> Telecharger le rapport de dossier
                    </a>
                </div>
            </div>
            <!-- Tab Rapport -->

            <!-- Tab Administration -->
            <div class="tab-pane fade" id="administration" role="tabpanel" aria-labelledby="administration-tab">
                <div class="row" style="margin-top: 1em">
                </div>
            </div>
            <!-- Tab Administration -->

        </div>
    </div>



    {% block botton_javascripts %}
        <script>

            $(document).ready(function() {


                {% if entite is not null %}

                $('#entiteModal').modal('show');
                $('#envenementModal').modal('hide');

                {% endif %}

                {% if envenement is not null %}

                $('#entiteModal').modal('hide');
                $('#envenementModal').modal('show');


                {% endif %}

                $('#entiteModal').on('hidden.bs.modal', function (event) {
                    window.location = "{{ path('affaire_details', {id: affaire.id }) }}"
                })

                $('#envenementModal').on('hidden.bs.modal', function (event) {
                    window.location = "{{ path('affaire_details', {id: affaire.id }) }}"
                })

            });


        </script>
    {% endblock %}



{% endblock %}
