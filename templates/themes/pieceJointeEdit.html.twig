
{% block PieceJointeType_row %}
    <div class="row mt-2">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>
    <hr>
{% endblock %}

{% block PieceJointeType_widget %}


    <div id="item_{{ id }}" class="col col-12">

    </div>

    <div class="col col-12 mt-3"></div>

    <div class="col col-4 ml-4">
        <div class="custom-file">
            {{ form_widget(form.file, {'attr': {'class': 'custom-file-input'}}) }}
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
        <div class="form-error" style="color: red">
            {{ form_errors(form.file) }}
        </div>
    </div>

    <div class="col col-4">
        <div class="d-flex flex-row">
            <a href="#" class="collection-add btn btn-sm btn-primary"><span class="fa fa fa-plus-circle"></span></a>
            <a href="#" class="collection-remove btn btn-sm btn-danger"><span class="fa fa-trash"></span></a>
        </div>
    </div>


{% endblock %}




